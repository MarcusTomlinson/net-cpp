               libboost-serialization-dev (>= 1.58) | libboost-serialization1.58-dev,
               libboost-system-dev (>= 1.58) | libboost-system1.58-dev,
               libcurl4-openssl-dev,
               libjsoncpp-dev,
               libprocess-cpp-dev,
               pkg-config,
               python-decorator,
               python-flask,
